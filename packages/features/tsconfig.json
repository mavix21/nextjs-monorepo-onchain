{
  "extends": "@myapp/tsconfig/compiled-package.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "paths": {
      "@/app/*": ["./src/app/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/widgets/*": ["./src/widgets/*"],
      "@/features/*": ["./src/features/*"],
      "@/entities/*": ["./src/entities/*"],
      "@/shared/*": ["./src/shared/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["*.ts", "src"],
  "exclude": ["node_modules"]
}
